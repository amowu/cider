startup_message off
autodetach off
bind j focus down
bind k focus up
bind .
bind q remove
bind s split

# Status line
caption string '%{= kW}%-Lw%{= kG} %n%f* %t%{= kW}%+Lw'
caption always

# Timeout for displaying messages
msgwait 1

# Dynamic shell title
shelltitle '$ |zsh'

# Support alternate screens so that, for example, when you quit out of vi, the
# display is redrawn as it was before vi redrew the full screen.
altscreen on

# Window numbering starts at 1
bind c screen 1
bind 0 select 10
screen 1
