! Xterm
xterm*visualBell:true
xterm*sessionMgt:false

! UXrvt
urxvt.scrollBar:false
urxvt.visualBell:true
urxvt.sessionMgt:false
urxvt.urlLauncher:chrome

! Fix backspace key in terminal
! Remaps backspace key from <c-h> to <c-?>, and remaps <c-space> to <c-h>.
*VT100.Translations:#override \
      ~Ctrl<Key>BackSpace:string(0x7F)\n\
       Ctrl<Key>BackSpace:string(0x08)\n
*ttyModes:erase ^?

! Fix backspace key in vim
*VT100.backarrowKey:false

! Use a decent font
xterm*faceName:DejaVu Sans Mono
xterm*faceSize:10
urxvt.font:xft:DejaVu Sans Mono:pixelsize=14

! -- Slate color scheme --

